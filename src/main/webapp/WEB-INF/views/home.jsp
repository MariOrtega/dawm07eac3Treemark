        <title>Pagina de Benvinguda</title>
    </head>
    <body>
        <section>
            <div class="jumbotron">
                <div class="container">
                    <h1  class="text-primary">${banner}</h1>
                    <h3>${tagline}</h3>
                </div>
            </div>
        </section>

        <section class="container">
            <div class="row"> 
                <c:forEach items="${options}" var="item">
                    <div class="card" style="width:18rem;">

                        <div class="card-body">
                            <h3 class="card-title">${item.title}</h3>
                            <h5 class="card-subtitle">${item.desc}</h5>
                            <p></p>
                            <a href=" <spring:url value= "${item.url}" /> " class="btn btn-primary  btn-lg btn-block">
                                <span class="${item.icon}"></span> Go!!!
                            </a>
                        </div>
                    </div>



                </c:forEach>
            </div>
        </section>   

    </body>
